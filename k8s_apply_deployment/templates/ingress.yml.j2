apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{name_app}}-ingres
  namespace: {{namespace}}
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: "3g"
spec:
  ingressClassName: nginx
  tls:
  - hosts: site.psn.by
    secretName: tls-nexus
    - host: site.psn.by
      http:
        paths:
        - path: "/"
          pathType: Prefix
          backend:
            service:
              name: {{name_app}}-service
              port:
                number: httpsvcdj

